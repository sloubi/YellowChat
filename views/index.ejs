<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>YellowChat</title>
        <style>
            #sendform {
                margin-top: 10px;
            }
            #chat {
                margin: 0;
                list-style: none;
                border: 1px solid #eee;
                height: 300px;
                overflow-y: auto;
                padding: 12px;
            }
        </style>
    </head>
    <body>
        <h1>YellowChat</h1>

        <div id="main">
            <ul id="chat">
                <% history.forEach(function (row) { %>
                    <li><b><%= row.nickname %></b> (<%= row.created_at %>) : <%= row.message %></li>
                <% }) %>
            </ul>

            <form method="post" action="" id="sendform">
                <span id="nickname"></span> dit
                <input type="text" name="message" id="message" autofocus autocomplete="off">
                <button id="send">Send</button>
            </form>
        </div>

        <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
        <script src="/socket.io/socket.io.js"></script>
        <script src="/public/js/client.js"></script>
        <script>
            setNickname('<%= nickname %>');
            setServerUrl('<%= serverUrl %>');
        </script>
    </body>
</html>